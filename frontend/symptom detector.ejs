<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Disease Early Detection System</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #EBF3E8;
            text-align: center;
            margin: 0;
        }

        .header {
            background-color: #7AB2B2;
            padding: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .header h1 {
            color: #0A1D56;
            font-size: 1.5rem;
            font-weight: 700;
            margin-left: 10px;
        }

        .header img {
            height: 40px;
            margin-right: 10px;
        }

        .nav-links {
            display: flex;
            gap: 15px;
        }

        .nav-links a {
            text-decoration: none;
            color: #0A1D56;
            font-weight: 600;
            background-color: white;
            padding: 8px 15px;
            border-radius: 5px;
        }

        .container {
            padding: 30px;
        }

        .container h2 {
            font-size: 2.5rem;
            color: #0A1D56;
            margin-bottom: 40px;
            font-weight: 600;
        }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-bottom: 40px;
        }

        .buttons .button {
            display: flex;
            color: #0A1D56;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            width: 150px;
            box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2);
            font-weight: 400;
        }

        .buttons .button img {
            width: 100px;
            height: 100px;
            margin-bottom: 10px;
        }

        .start-detect {
            background-color: #0A1D56;
            color: white;
            font-size: 1.2rem;
            padding: 10px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
        }

        .footer {
            background-color: #7AB2B2;
            color: #0A1D56;
            padding: 10px;
            font-size: 0.9rem;
            font-weight: 300;
        }

        .cats {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .cats img {
            height: 250px; /* Adjusted size to match the design */
            border-radius: 8px;
        }

        /* Remove bullets from symptom list */
        .symptom-list {
            list-style-type: none;
            padding: 0;
        }

        .symptom-list li {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-left">
            <img src="Images/cat icon.png" alt="Cat Icon">
        </div>
        <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/Checklist">Symptom Detector</a>
        </nav>
    </header>

    <div class="container">
        <p>Select the symptoms that your cat is currently experiencing:</p>
        <ul class="symptom-list">
            <li><input type="checkbox" id="lossOfAppetite"> <label for="lossOfAppetite">Loss of Appetite</label></li>
            <li><input type="checkbox" id="vomiting"> <label for="vomiting">Vomiting</label></li>
            <li><input type="checkbox" id="diarrhea"> <label for="diarrhea">Diarrhea</label></li>
            <li><input type="checkbox" id="coughing"> <label for="coughing">Coughing</label></li>
            <li><input type="checkbox" id="sneezing"> <label for="sneezing">Sneezing</label></li>
        </ul>
        <button class="start-detect" onclick="detectSymptoms()">Detect</button>

        <div class="cats">
            <img src="Images/meow 1.png" alt="Cat Image">
            <img src="Images/meow 2.png" alt="Cat Image">
        </div>
    </div>

    <footer class="footer">
       <b>Â©2024 Cat Disease Early Detection System. All Rights Reserved</b> 
    </footer>

    <script>
        function detectSymptoms() {
            // Collect selected symptoms
            let symptoms = [];
            if (document.getElementById("lossOfAppetite").checked) symptoms.push("Loss of Appetite");
            if (document.getElementById("vomiting").checked) symptoms.push("Vomiting");
            if (document.getElementById("diarrhea").checked) symptoms.push("Diarrhea");
            if (document.getElementById("coughing").checked) symptoms.push("Coughing");
            if (document.getElementById("sneezing").checked) symptoms.push("Sneezing");

            // Display selected symptoms
            if (symptoms.length > 0) {
                alert("Detected Symptoms:\n" + symptoms.join(", "));
            } else {
                alert("No symptoms selected. Please select at least one symptom.");
            }
        }
    </script>
</body>
</html>
